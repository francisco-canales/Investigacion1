<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Investigacion1.MainPage"
             Shell.NavBarIsVisible="False"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Image
                Source="undo.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Invierte el orden!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Entry Placeholder="Introduce el data A" x:Name="datoA"/>
            <Entry Placeholder="Introduce el data B" x:Name="datoB"/>
            <Entry Placeholder="Introduce el data C" x:Name="datoC"/>
            <Entry Placeholder="Introduce el data D" x:Name="datoD"/>
            <Button Text="Inverte" x:Name="btnInvertir" Clicked = "btnInvertir_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
